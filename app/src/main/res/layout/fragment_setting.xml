<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="settingItems"
            type="com.example.qrreader.SettingItems" />
        <variable
            name="activity"
            type="com.example.qrreader.MainActivity" />


    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/include"
                layout="@layout/setting_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:image="@{settingItems.securePolicy.image}"
                app:layout_constraintBottom_toTopOf="@+id/guideline37"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@{settingItems.securePolicy.text}"
                android:onClick="@{(view)->activity.secure(view)}"
                tools:layout_editor_absoluteX="1dp">

            </include>

            <include
                android:id="@+id/include2"
                layout="@layout/setting_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:image="@{settingItems.data.image}"
                app:layout_constraintBottom_toTopOf="@+id/guideline38"
                app:layout_constraintTop_toBottomOf="@+id/include"
                app:text="@{settingItems.data.text}"
                android:onClick="@{(view)->activity.data(view)}"
                tools:layout_editor_absoluteX="1dp">

            </include>

            <include
                layout="@layout/setting_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:image="@{settingItems.exit.image}"
                app:layout_constraintBottom_toTopOf="@+id/guideline39"
                app:layout_constraintTop_toBottomOf="@+id/include2"
                app:text="@{settingItems.exit.text}"
                android:onClick="@{(view)->activity.finish(view)}"
                tools:layout_editor_absoluteX="1dp">

            </include>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>